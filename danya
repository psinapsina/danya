class Danya:
    def __init__(self):
        self.debil = True
        self.fat = 3

    def call(self):
        print('привет я даня')

    def ask(self):
        question = input('Ваш вопрос :')
        print('дане надо подумать...')
        print('даня еще думает')
        print('придумал')
        a = True
        while a == True:
            print('Хотите узнать ответ? Напишите "да" или "нет"')
            b = input()
            if b == "да":
                print('Даня ответил : "не знаю" ')
                a = False
            elif b == 'нет':
                print(
                    'Ну вы конечно мда тупой а нахуй тогда спрашивать было. он из-за вас так перенапрягся когда думал что теперь ушел в тильт')
                a = False
            else:
                print('Вы тупой и не можете нормально написать да или нет. ну ок попробуйте еще раз')

    def talk(self):
        text = input("напишите ваши мысли сюда."
                     " это важный разговор поэтому пишите честно "
                     "и не меньше 6 слов иначе даня не будет отвечать и пойдет писать Нике. ").split()
        if len(text) >= 6:
            print(
                'пока вы изливали душу даня пожелал нике спокойной ночи но вам не успел и уснул. ну вы настрочили конечно. душнила, слишком многобукв потому что даня столько не прочитает')
        else:
            print('даня посчитал ваше сообщение неважным и ничего не ответил')

    def Play(self):
        if self.fat > 1:
            print("Играем!")
            print('даня слил')
            self.fat -= 1
        else:
            print("даня xочет кушать")

    def Feed(self):
        if (self.fat < 5):
            print("даня покушал")
            self.fat += 1
        else:
            print("Не хочет кушать...")

    def sex(self):
        if self.fat <= 1:
            print('даня голодный')
        else:
            print('даня не хочет с вами секса')

    def walk(self):
        if self.fat <= 1:
            print('даня голодный')
        else:
            print('даня уже гуляет с никой')


print(' привет это даня-тамагочи')
print('вот краткий список команд: позвать, задать вопрос, поговорить, покормить, го в кс, погулять, секс')
q = Danya()
while True:
    w = input("введите команду: ")
    if w == 'позвать':
        q.call()
    elif w == 'задать вопрос':
        q.ask()
    elif w == 'поговорить':
        q.talk()
    elif w == 'покормить':
        q.Feed()
    elif w == "го в кс":
        q.Play()
    elif w == 'погулять':
        q.walk()
    elif w == 'секс':
        q.sex()
    else:
        print('нет такой команды')
